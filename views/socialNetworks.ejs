<div class="selection social-networks hide">
  <h1 class="title">3ยบ <%=translation.step%>: <%=translation.networks%></h1>
  <h2 class="black-subtitle">
    <%=translation.chose%>
    <b><%=translation.networks%></b> <%=translation.asService%>:
  </h2>

  <div class="wrapper-column">
    <div>
      <select
        class="choices"
        name="number-social-networks"
        id="number-social-networks"
      >
        <option class="hide" value="" disabled selected>
          <%=translation.howManyNetWorks%>
        </option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="6">5</option>
      </select>
      <select
        class="choices"
        name="posts-social-networks"
        id="posts-social-networks"
      >
        <option class="hide" value="" disabled selected>
          <%=translation.nPosts%>
        </option>
        <option value="1">1</option>
        <option value="2">2</option>
        <option value="3">3</option>
        <option value="4">4</option>
        <option value="5">5</option>
      </select>
    </div>
    <div>
      <select
        class="choices"
        name="clients-social-networks"
        id="clients-social-networks"
      >
        <option class="hide" value="" disabled selected>
          <%=translation.comments%>
        </option>
        <option value="yes"><%=translation.yes%></option>
        <option value="no"><%=translation.no%></option>
      </select>
      <select
        class="choices"
        name="campaign-managment-social-networks"
        id="campaign-managment-social-networks"
      >
        <option class="hide" value="" disabled selected>
          <%=translation.campaign%>
        </option>
        <option value="yes"><%=translation.yes%></option>
        <option value="no"><%=translation.no%></option>
        <option value="other"><%=translation.outro%></option>
      </select>
    </div>
  </div>

  <div class="continue-section">
    <button id="anterior-step-3-social-networks" class="anterior">
      <%=translation.previous%>
    </button>
    <button id="continuar-step-3-social-networks" class="continuar">
      <%=translation.continuar%>
    </button>
  </div>
</div>
